{% extends "FlightsBundle::bootstrap.html.twig" %}

{% block observed %}
    <div style="display:flex;justify-content:center;align-items:center;height: 70vh">
        <div>
            <table class="table" style="background: rgba(255,255,255,0.45); border-radius: 8px;">
                <tr>
                    <th>Destination</th>
                    <th>From</th>
                    <th>Currency</th>
                    <th>Price</th>
                </tr>

            {% for row in observed %}
                <tr style="border-top: inherit" data-id="{{ row.id }}">
                    <td>{{ row.destination }}</td>
                    <td>{{ row.fromLocation }}</td>
                    <td>{{ row.currency }}</td>
                    <td>{{ row.price }}</td>
                    {% if is_granted('ROLE_USER') %}
                        <td>
                            <input type="button" value="Delete from observed." class="delete btn btn-default">
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
            </table>
            <a href="{{ path('getApi') }}" class="btn btn-default" id="search_observed">Go back to search.</a>
            <a href="{{ path('observed') }}" class="btn btn-default" id="observed">Refresh observed list.</a>
        </div>
    </div>

{% endblock observed %}